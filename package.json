{
  "name": "golem-hyperdrive",
  "version": "0.2.0",
  "description": "Hyperdrive client for the Golem project",
  "author": "Marek Franciszkiewicz",
  "keywords": [
    "p2p",
    "replication"
  ],
  "bin": {
    "hyperg": "src/index.js",
    "hyperg-client": "src/client.js"
  },
  "scripts": {
    "dist:deps:sodium": "PLATFORM=$(uname | tr '[A-Z]' '[a-z]') && cp node_modules/sodium-native/prebuilds/${PLATFORM}-x64/node-51.node dist/hyperg/sodium.node",
    "dist:deps:rabin": "cp node_modules/rabin/build/Release/rabin.node dist/hyperg",
    "dist:deps:leveldown": "cp node_modules/leveldown/build/Release/leveldown.node dist/hyperg",
    "dist:deps": "mkdir -p dist/hyperg && npm run dist:deps:sodium && npm run dist:deps:rabin && npm run dist:deps:leveldown",
    "dist:main": "enclose -c enclose.conf -o dist/hyperg/hyperg src/index.js",
    "dist:client": "enclose -c enclose.conf -o dist/hyperg/hyperg-client src/client.js",
    "dist": "npm run dist:deps && npm run dist:main && npm run dist:client",
    "clean": "rm -rf dist/*"
  },
  "dependencies": {
    "datland-swarm-defaults": "1.0.0",
    "discovery-swarm": "4.0.2",
    "hypercore": "4.10.0",
    "hyperdrive": "7.9.0",
    "level": "1.5.0",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1",
    "passthrough-encoding": "1.2.0",
    "pump": "1.0.2",
    "uuid": "^3.0.1",
    "winston": "^2.3.1"
  }
}
