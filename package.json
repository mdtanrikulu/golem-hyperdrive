{
  "name": "golem-hyperdrive",
  "shortName": "HyperG",
  "version": "0.2.6",
  "description": "Hyperdrive client for the Golem project",
  "author": {
    "name": "Marek Franciszkiewicz",
    "email": "marek@golem.network"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mfranciszkiewicz/golem-hyperdrive"
  },
  "keywords": [
    "p2p",
    "replication"
  ],
  "features": {
    "utp": false
  },
  "bin": {
    "hyperg": "src/index.js",
    "hyperg-client": "src/client.js"
  },
  "pkg": {
    "assets": "./node_modules/hyperdrive-encoding/schema.proto"
  },
  "scripts": {
    "start:client": "node src/client.js",
    "start": "node --expose-gc --max-old-space-size=3072 src/index.js",
    "start:debug": "node --expose-gc --max-old-space-size=3072 src/index.js --loglevel debug",
    "archive": "node build.js archive",
    "build": "node build.js build",
    "clean": "node build.js clean",
    "deps": "node build.js deps",
    "dist": "npm run clean && npm run deps && npm run build && npm run archive"
  },
  "dependencies": {
    "datland-swarm-defaults": "1.0.0",
    "discovery-swarm": "4.0.2",
    "events": "^1.1.1",
    "fs-extra": "^4.0.1",
    "fs-readstream-progress": "0.0.4",
    "heapdump": "^0.3.9",
    "hypercore": "4.10.0",
    "hyperdrive": "7.9.0",
    "inherits": "^2.0.3",
    "level": "1.5.0",
    "leveldown": "~1.5.0",
    "minimist": "1.2.0",
    "mkdirp": "0.5.1",
    "multi-read-stream": "^2.0.0",
    "passthrough-encoding": "1.2.0",
    "pump": "1.0.2",
    "rabin": "^1.4.0",
    "rimraf": "2.6.1",
    "uuid": "^3.0.1",
    "winston": "^2.3.1",
    "ip": "^1.1.5"
  },
  "devDependencies": {
    "pkg": "4.3.0",
    "archiver": "1.3.0",
    "node-abi": "2.0.2"
  }
}
